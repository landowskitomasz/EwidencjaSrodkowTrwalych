<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickEmployeeTitle" 
        android:textSize="20dip" />

    <Spinner
        android:id="@+id/employeesSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
   <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
       </LinearLayout>
       <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
    <Button
        android:id="@+id/addEmployeeButton_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/addButtonContent" />
    </LinearLayout>
       <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
       </LinearLayout>
    </LinearLayout>

</LinearLayout>